<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="300dp"
        android:minWidth="300dp"
        android:visibility="visible">

        <Button
            android:id="@+id/createSleepDataButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ADD_SLEEP_DATA_BUTTONTEXT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="onClickCreateSleepData"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sleepListItems"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createSleepDataButton" />

    </android.support.constraint.ConstraintLayout>
</layout>